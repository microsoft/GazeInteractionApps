                                <Button x:Name="GazePlusSwitchToggle" Background="{x:Null}" FontFamily="Segoe UI" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="0" Margin="10,0,10,0" Click="GazePlusSwitchToggle_Click">
                                    <Grid x:Name="GazePlusSwitchToggleShape" Margin="-2" Background="White" CornerRadius="5">
                                        <TextBlock x:Name="GazePlusSwitchToggleText"  Foreground="{StaticResource ToolBarButtonBackground}" FontFamily="Segoe UI" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            Switch
                                        </TextBlock>
                                    </Grid>
                                </Button>
                                <Button x:Name="GazeToggle" Background="{x:Null}" FontFamily="Segoe UI" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="0" Margin="10,0,10,0" Click="GazeToggle_Click" >
                                    <Grid x:Name="GazeToggleShape" Margin="-2" Background="White" CornerRadius="5">
                                        <TextBlock x:Name="GazeToggleText"  Foreground="{StaticResource ToolBarButtonBackground}" FontFamily="Segoe UI" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            Dwell
                                        </TextBlock>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Border>
                        
                        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" BorderBrush="White" BorderThickness="1,1,1,1" Padding="20" Margin="10" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width=".5*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width=".5*"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock  x:Uid="SymbolSetLabel" Foreground="White" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="top" Grid.Column="0" Grid.Row="0" Margin="0,0,0,0">Symbol Set</TextBlock>
                                    <TextBlock  x:Uid="SymbolSetDescriptionLabel" Foreground="White" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="top" Grid.Column="0" Grid.Row="1" Margin="0,0,0,0"  TextWrapping="Wrap">Choose the set of symbols you want to see in the game</TextBlock>
                                </Grid>

                                <Button x:Uid="PreviousSymbolCollectionButton" x:Name="PreviousSymbolCollectionButton" AutomationProperties.Name="Previous Symbol Collection Button" Grid.Column="1" Background="{x:Null}" FontFamily="Segoe UI"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"  Padding="0" Margin="0,0,0,0" Click="PreviousSymbolCollectionButton_Click" gaze:GazeInput.DwellRepeatDuration="{StaticResource RepeatDuration}" gaze:GazeInput.MaxDwellRepeatCount="99">
                                    <Grid Margin="-2" Background="White" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <TextBlock x:Name="PreviousSymbolCollectionText"  Foreground="{StaticResource ToolBarButtonBackground}" FontFamily="Segoe MDL2 Assets" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center">
                                         &#xe76b;
                                        </TextBlock>
                                    </Grid>
                                </Button>
                                <TextBlock  x:Uid="SettingsSymbolCollectionLabel" x:Name="SettingsSymbolCollectionLabel" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" Margin="0,0,0,0">Emoji symbols</TextBlock>
                                <Button x:Uid="NextSymbolCollectionButton" x:Name="NextSymbolCollectionButton" AutomationProperties.Name="Next Symbol Collection Button" Background="{x:Null}" FontFamily="Segoe UI" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"  Padding="0" Margin="0,0,0,0" Click="NextSymbolCollectionButton_Click" gaze:GazeInput.MaxDwellRepeatCount="99" gaze:GazeInput.DwellRepeatDuration="{StaticResource RepeatDuration}">
                                    <Grid Margin="-2" Background="White" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <TextBlock x:Name="NextSymbolCollectionButtonText"  Foreground="{StaticResource ToolBarButtonBackground}" FontFamily="Segoe MDL2 Assets" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center">
                                         &#xe76c;
                                        </TextBlock>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Border>

                        <Button x:Uid="SettingsContinueButton" x:Name="SettingsContinueButton" AutomationProperties.Name="Continue" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Width="296" Height="96" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="0"  Background="{x:Null}" Foreground="White" FontSize="24" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Click="SettingsContinueButton_Click" Margin="0,20,0,20">
                            <Grid Margin="-2" Background="White" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                                <TextBlock x:Uid="SettingsContinue" Text="Continue" Foreground="{StaticResource ToolBarButtonBackground}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"></TextBlock>
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="PrivacyViewGrid" Grid.RowSpan="6" Grid.ColumnSpan="6" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1.2" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                    <GradientStop Color="#c6ffff" Offset="0.8"/>
                    <GradientStop Color="#FFc6beff" Offset="0.009"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="50,50,50,230" BorderBrush="{StaticResource TileBackground}" Grid.ColumnSpan="3" BorderThickness="1,1,1,1" >
                <WebView x:Name="PrivacyWebView"  NavigationCompleted="PrivacyWebView_NavigationCompleted"/>
            </Border>

            <TextBlock x:Uid="WebViewLoadingPrompt"  x:Name="WebViewLoadingText" Visibility="Collapsed" Text="Loading.." VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="3" FontSize="24" Margin="0,0,0,200" Foreground="{StaticResource ToolBarButtonBackground}" FontFamily="Segoe UI" />
            <Button x:Uid="PrivacyViewScrollUpButton" x:Name="PrivacyViewScrollUpButton" AutomationProperties.Name="Scroll up" Grid.Column="0" Width="146" Height="146" VerticalAlignment="Bottom" HorizontalAlignment="center" Margin="0,50,0,50" Padding="0" Click="PrivacyViewScrollUpButton_Click" Background="{x:Null}" Foreground="White" FontSize="24" FontFamily="Segoe MDL2 Assets" gaze:GazeInput.MaxDwellRepeatCount="99" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid Margin="-2" Background="{StaticResource ToolBarButtonBackground}" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <TextBlock Text="&#xe971;" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </Grid>
            </Button>

            <Button x:Uid="PrivacyViewScrollDownButton" x:Name="PrivacyViewScrollDownButton" AutomationProperties.Name="Scroll down" Grid.Column="1" Width="146" Height="146" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,50,0,50" Padding="0" Click="PrivacyViewScrollDownButton_Click" Background="{x:Null}" Foreground="White" FontSize="24" FontFamily="Segoe MDL2 Assets" gaze:GazeInput.MaxDwellRepeatCount="99" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid Margin="-2" Background="{StaticResource ToolBarButtonBackground}" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <TextBlock Text="&#xe972;" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </Grid>
            </Button>

            <Button x:Uid="WebViewContinueButton" x:Name="PrivacyViewContinueButton" AutomationProperties.Name="Continue" Grid.Column="2" Width="296" Height="146" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,50,0,50" Padding="0" Click="PrivacyViewContinueButton_Click" Background="{x:Null}" Foreground="White" FontSize="24" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <Grid Margin="-2" Background="{StaticResource ToolBarButtonBackground}" CornerRadius="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                    <TextBlock x:Uid="WebViewContinue" Text="Continue" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </Grid>
            </Button>

        </Grid>
    </Grid>
</Page>
